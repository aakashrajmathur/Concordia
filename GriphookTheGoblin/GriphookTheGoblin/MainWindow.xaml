<Window x:Class="GriphookTheGoblin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GriphookTheGoblin"
        mc:Ignorable="d"
        Title="Griphook The Goblin" Height="350" Width="1094.445">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="griphookTheGoblin.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <ListBox x:Name="listBoxResults" Margin="10,67,10,10" Opacity="0.7"/>
        <Slider x:Name="sliderProfitPerc" Margin="10,10,139,0" VerticalAlignment="Top" Maximum="100" IsSnapToTickEnabled="True" ValueChanged="sliderProfitPerc_ValueChanged"/>
        <Label x:Name="labelSliderValue" Content="Label" Margin="0,5,96,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="38" Foreground="White"/>
        <Button x:Name="buttonRunAnalysis" Content="Run Analysis" Margin="0,8,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="buttonRunAnalysis_Click"/>
        <Label x:Name="labelInfo" Content="" Margin="10,33,10,0" VerticalAlignment="Top" Opacity="0.7" Background="White"/>


    </Grid>
</Window>

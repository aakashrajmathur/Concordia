<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaraudersMap"
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="MaraudersMap.MainWindow"
        mc:Ignorable="d"
        Title="MARAUDER'S MAP" Height="600" Width="850" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="MaraudersMap.jpg"/>
    </Window.Background>
    <Grid>
        <Grid Margin="10,75,10,175">
            <!-- Define Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" x:Name="listBoxLiveEvents"  Width="auto" Opacity="0.75" Margin="0,10,5,10"/>
            <ListBox Grid.Column="1" x:Name="listBoxFinishedEvents" Width="auto" Opacity="0.75" Margin="5,10,0,10"/>
        </Grid>
        <Label x:Name="counterLabel" Content="" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="87" HorizontalContentAlignment="Right"/>
        <awe:WebControl x:Name="mainPageWebBrowser" Height="160" Margin="10" VerticalAlignment="Bottom"/>
    </Grid>
</Window>